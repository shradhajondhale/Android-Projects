<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.maverick.assampoll2016.Verification" >

     <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:gravity="center_vertical"
     android:background="#ffffff"
     android:layout_weight="0.1">
     
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-light"
        android:padding="4dp"
        android:text="Please enter the confirmation code sent to you by SMS. Carrier SMS charges may apply. Please make sure you have a working SMS plan." />
    
    
    </LinearLayout>
   

    
    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:background="#ffffff"
     android:layout_weight="0.1">
     
       <EditText
        android:id="@+id/eotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="5"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    
            
    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ok"
        android:background="@drawable/buttonselector"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:layout_margin="10dp"
        android:text="OK" />
    
    </LinearLayout>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"/>
  
    
    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:gravity="center"
     android:layout_weight="0.1">
    
        <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Didn't receive an SMS?" />
        
         <Button
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="resend"
        android:textColor="#6B9A64"
        android:background="#ffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Resend OTP" />
         
    </LinearLayout>

       


    <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_weight="0.7">

        


   </LinearLayout>

</LinearLayout>