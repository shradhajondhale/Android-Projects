<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    tools:context="com.maverick.abdurrashidmandal.SlidingDrawer" >

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#5FB404"
    android:gravity="center|left"
    android:padding="15dp">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_launcher" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />
    

    <Button
        android:id="@+id/button1"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/home"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Home" />
    
    <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

    <Button
        android:id="@+id/button2"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/adduser"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Become a member" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

    <Button
        android:id="@+id/button3"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/talk"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Chat" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

    <Button
        android:id="@+id/button4"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mail"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Contact Us" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

    <Button
        android:id="@+id/button5"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/agenda"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="Party Agenda" />

     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />
    
    <Button
        android:id="@+id/button6"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/question"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:text="FAQ's" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

    <Button
        android:id="@+id/button7"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/info"
        android:textColor="#ffffff"
        android:drawablePadding="10dp"
        android:background="@android:color/transparent"
        android:textSize="15sp"
        android:onClick="aboutus"
        android:text="About Us" />
    
     <View
       android:layout_width="wrap_content"
       android:layout_height="0.5dp"  
       android:background="#4C9003" />

</LinearLayout>


</ScrollView>