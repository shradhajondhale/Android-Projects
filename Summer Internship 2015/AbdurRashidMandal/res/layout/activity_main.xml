

<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:fillViewport="true" 
    android:background="@drawable/b">


<!-- main layout linear -->
<LinearLayout 
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    
    
    <!-- text 1 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_marginTop="2dp"
      android:layout_marginBottom="2dp"
      android:layout_weight="0.05">
      
        <TextView
            android:text="LAST 24 HOURS UPDATE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#298A08"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="2dp"/>
      
    </LinearLayout>
    
    <!-- horizontal 1 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_gravity="center"
       android:layout_weight="0.2">
      
        <!-- 1st button -->
   
             <Button
                 android:id="@+id/nat"
                 android:onClick="nat"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="National"
                android:alpha="0.75"
                android:textSize="12sp"
                android:background="#FF9933"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#ffffff"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/clock"/>
        
      
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 2 button -->
     
            
            <Button
                 android:onClick="state"
                android:id="@+id/state"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="State"
                android:alpha="0.75"
                android:textSize="12sp"
                android:background="#FF9933"
                android:padding="20dp"
                android:textColor="#ffffff"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/clock"/>
       
         <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 3 button -->

            
            <Button
                 android:onClick="loc"
                android:id="@+id/loc"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Local"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:padding="20dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/clock"/>
     
        
    </LinearLayout>
    
     <!-- text 2 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="2dp"
      android:layout_weight="0.05">
      
        <TextView
            android:text="CANDIDATE UPDATES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#298A08"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="2dp"/>
      
    </LinearLayout>
    
    
    
    <!-- horizontal 2 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_gravity="center"
       android:layout_weight="0.2">
      
        <!-- 1st button 2 -->

            
            <Button
                 android:onClick="fb"
                android:id="@+id/fb"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Facebook"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:drawablePadding="15dp"
                android:textSize="12sp"
                android:background="#FF9933"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_weight="0.333"
                android:drawableTop="@drawable/facebook"/>
     
      
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 2 button  2-->
   
            <Button
                 android:onClick="tw"
                android:id="@+id/tw"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                 android:layout_weight="0.333"
                android:text="Twitter"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:drawablePadding="15dp"
                android:padding="20dp"
                android:drawableTop="@drawable/twitter"
         
                />
    
        
         <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 3 button  2-->
     
            
            <Button
                 android:onClick="vid"
                android:id="@+id/vid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Videos"
                android:alpha="0.75"
                 android:layout_weight="0.333"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:padding="20dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/video"/>
 
        
    </LinearLayout><!-- horizontl clos -->
   
            <View
            android:layout_height="3dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"/>
            
   <!-- horizontal 3 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_gravity="center"
       android:layout_weight="0.2">
      
        <!-- 1st button  3-->
     
            
            <Button
                 android:onClick="events"
                android:id="@+id/events"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Events\n"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/calendar"/>
      
      
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 2 button  3-->
    
            
            <Button
                 android:onClick="webnews"
                android:id="@+id/webnews"
                 android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Website\nNews"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:drawablePadding="15dp"
                android:drawableTop="@drawable/newspaper"/>
      
        
         <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 3 button 3 -->
   
           <Button
                android:onClick="canpro"
                android:id="@+id/canpro"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Candidate\nProfiles"
                android:alpha="0.75"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:background="#FF9933"
                android:drawablePadding="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:drawableTop="@drawable/group"/>
    
        
    </LinearLayout> 
    
    
    <View
            android:layout_height="3dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"/>
            
   <!-- horizontal 4 layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_gravity="center"
       android:layout_weight="0.2">
      
        <!-- 1st button  4-->
 
            
         
            
             <Button
               android:onClick="track"
                android:id="@+id/track"
                android:gravity="center"
                android:layout_weight="0.333"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:alpha="0.75"
                android:text="Track\nRoadshow"
                android:textColor="#ffffff"
                android:drawablePadding="15dp"
                android:textSize="12sp"
                android:background="#FF9933"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:drawableTop="@drawable/marker"/>
      
      
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 2 button  4-->
      
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.333">
                  
           
            
             <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"/>
             </LinearLayout>
    
        
         <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
        <!-- 3 button 4 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.333">
            
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"/>
        </LinearLayout>
        
    </LinearLayout> <!-- horizon4 clos -->
    

      <View
            android:layout_height="5dp"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"/>
        
    
     <!--button layout -->
    <LinearLayout 
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_margin="2dp"
      android:gravity="center"
      android:background="#e6e6e6"
      android:layout_weight="0.1">
        
          <Button
                android:id="@+id/all"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="ALL USERS"
                android:layout_weight="0.5"
                android:textSize="16sp"
                android:onClick="all"
                android:textColor="#ffffff"
                android:background="#FF9900"
                android:textStyle="bold"/>
          <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
        
           <Button
               android:id="@+id/reg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="REGISTERED USERS"
                android:layout_weight="0.5"
                 android:textSize="16sp"
                 android:onClick="reg"
                 android:textColor="#ffffff"
                 android:background="#339900"
                android:textStyle="bold"/>
          
          
    </LinearLayout>  <!-- button layout -->
    
</LinearLayout><!-- main clos -->
</ScrollView>


