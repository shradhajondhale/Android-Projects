
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maverick.foody.Cart" >
    
     <!-- buttons total -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center|right">

        <Button
            android:id="@+id/buttonclear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="CLEAR ALL" />

        
    </LinearLayout>
  

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        
    <TextView
        android:id="@+id/textseiral"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Sr No." />

    <TextView
        android:id="@+id/textitem"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|left"
        android:textSize="12sp"
        android:text="Item Name" />

    <TextView
        android:id="@+id/textqty"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Qty" />

    <TextView
        android:id="@+id/textrate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="Rate" />
    

   <TextView
        android:id="@+id/texttotal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="Total" />
        
    </LinearLayout>

  <View
      android:layout_height="0.5dp"
      android:layout_width="match_parent"
      android:background="#6e6e6e"/>
  
  
  <!-- bill items -->
  
       <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
  
  
  
  <!-- item 1 -->
     <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">
        
    <TextView
        android:id="@+id/textseiral1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="1" />

    <TextView
        android:id="@+id/textitem1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|left"
        android:textSize="12sp"
        android:text="French Fries" />

    <TextView
        android:id="@+id/textqty1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="2" />

    <TextView
        android:id="@+id/textrate1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 100.00" />
    

   <TextView
        android:id="@+id/texttotal1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 200.00" />
        
    </LinearLayout>
    
     
     <!-- item 2 -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">
        
    <TextView
        android:id="@+id/textseiral2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="2" />

    <TextView
        android:id="@+id/textitem2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|left"
        android:textSize="12sp"
        android:text="Veg Roll" />

    <TextView
        android:id="@+id/textqty2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="1" />

    <TextView
        android:id="@+id/textrate2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 35.00" />
    

   <TextView
        android:id="@+id/texttotal2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 35.00" />
        
    </LinearLayout>
    
         <!-- item 3 -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">
        
    <TextView
        android:id="@+id/textseiral3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="3" />

    <TextView
        android:id="@+id/textitem3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|left"
        android:textSize="12sp"
        android:text="Ice-cream" />

    <TextView
        android:id="@+id/textqty3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center"
        android:textSize="12sp"
        android:text="2" />

    <TextView
        android:id="@+id/textrate3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 20.00" />
    

   <TextView
        android:id="@+id/texttotal3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="#6e6e6e"
        android:gravity="center|right"
        android:textSize="12sp"
        android:text="₹ 40.00" />
        
    </LinearLayout>
    
 </LinearLayout><!-- bill items -->
 
  <View
      android:layout_height="0.5dp"
      android:layout_width="match_parent"
      android:background="#6e6e6e"/>
 
  <!-- total -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/texttotalqty"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|left"
            android:textSize="12sp"
            android:text="Total Qty:" />

        <TextView
           android:id="@+id/totalqty"
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:textColor="#6e6e6e"
           android:gravity="center"
           android:textSize="12sp"
           android:text="3" />
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|right"
            android:textSize="12sp"
            android:text="Sub Total:" />
        
        <TextView
            android:id="@+id/textV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|right"
            android:textSize="12sp"
            android:text="₹ 275.00" />
        
    </LinearLayout><!-- sub total -->
  
  <!-- taxes -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/texttax"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|left"
            android:textSize="12sp"
            android:text="Taxes (12.5 %):" />


        
        <TextView
            android:id="@+id/texttaxrate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|right"
            android:textSize="12sp"
            android:text="₹ 36.00" />
        
    </LinearLayout> <!-- taxes -->
  
  <!-- grand total -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textgrandtotal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|left"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="GRAND TOTAL:" />


        
        <TextView
            android:id="@+id/textgrandtotalrate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:gravity="center|right"
            android:textSize="12sp"
            android:text="₹ 311.00" />
        
    </LinearLayout>
  
    
     <!-- buttons total -->
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLACE ORDER" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD MORE" />
        
    </LinearLayout>
  
</LinearLayout>

</ScrollView>