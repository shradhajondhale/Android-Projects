<!-- main -->
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/coll"
    android:gravity="center">
   

      <!-- blank -->
  <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_margin="15dp"
           android:layout_weight="0.1">

   
      
       </LinearLayout>
       
<!--1 -->

   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_weight="0.1">

      
        <EditText
           android:id="@+id/editText1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="5dp"
           style="@style/editext_graybg"
           android:hint="Name"
           android:fontFamily="sans-serif-light"
           android:layout_marginTop="@dimen/pad_15dp"
           android:drawableLeft="@drawable/ic_username"
           android:inputType="text" />
        
                   
       <EditText
           
            android:hint="Phone Number"
            android:inputType="phone" 
            android:id="@+id/editText2"
            style="@style/editext_graybg"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pwd"/>

   
       
</LinearLayout>
 

    

          
   <!-- 3 -->   
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:layout_weight="0.1">
         
         <TextView
             android:id="@+id/textView1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Choose your Constituency:"
             android:fontFamily="sans-serif-light"
             android:textColor="#808080"
             android:gravity="center|left"
             android:drawablePadding="5dp"
             android:drawableLeft="@drawable/locationicon"
             android:paddingLeft="5dp"
             android:layout_weight="0.7"
             android:textSize="16sp"
             android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <View 
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="#e6e6e6"/>
      
         <Spinner
             android:id="@+id/location"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="sans-serif-light"
             android:gravity="left"
             android:popupBackground="#ffffff"
             android:layout_weight="0.3"
             android:textSize="20sp"/>

</LinearLayout>

<!-- 4 : horizontal layout  -->
  <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="0.1"
           android:layout_margin="15dp">
          
       <CheckBox
           android:id="@+id/check"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="itemClicked"
           android:layout_weight="0.05"/> 
           
       <Button
           android:id="@+id/terms"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#009966"
           android:onClick="termsandcon"
           android:background="@android:color/transparent"
           android:text="I agree to the Terms and Conditions of Assam Poll 2016."
           android:textSize="12sp"
           android:layout_weight="0.95"/>

   
</LinearLayout>



  <!-- 5 -->
  
<LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_weight="0.1">
          

       <Button
           android:id="@+id/button1"
           android:textSize="15sp"
           android:background="@drawable/buttonselector"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="signup"
           android:textColor="#ffffff"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:layout_marginTop="@dimen/pad_15dp"
           android:fontFamily="sans-serif-light"
           android:text="Continue  >>" />

   
  </LinearLayout>
  
         <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#e6e6e6"/>
    <!-- blank -->
  <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_weight="0.5">
       </LinearLayout>

          
</LinearLayout>

