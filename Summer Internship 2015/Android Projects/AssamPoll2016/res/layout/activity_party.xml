  <ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="5dp">
 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_weight="0.3">

        
        <ImageView
            android:id="@+id/partyphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:layout_weight="0.3"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/partytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="0.7"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:text="" />
        
    </LinearLayout>

   <View
     android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#e6e6e6"/>
    
   
   <LinearLayout
      
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_weight="0.1"
       android:orientation="horizontal">

       
       <TextView
           android:id="@+id/likes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0 Likes"
           android:layout_gravity="center"
           android:textColor="#566DB0"
           android:layout_weight="0.4"
           android:layout_margin="10dp"
           android:drawableLeft="@drawable/fb"
           android:textAppearance="?android:attr/textAppearanceSmall" />
       
       <TextView
           android:id="@+id/dot"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" | "
           android:textColor="#ffffff"
           android:layout_weight="0.2"/>

       <TextView
           android:id="@+id/talkingabout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0 people talking about this."
           android:layout_weight="0.4"
           android:textAppearance="?android:attr/textAppearanceSmall" />


        
  </LinearLayout>
   
   
       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_weight="0.1"
       android:layout_margin="10dp"
       android:orientation="horizontal">
        
                             
              
            <Button
                android:id="@+id/locationbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="location"
                android:textSize="10dp"
                android:text="LOCATE US ON MAP"
                android:gravity="center"
                android:drawablePadding="1dp"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mlocationicon"
                android:textColor="#009966"/>
            
            
        <Button
            android:id="@+id/fblink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="findonfb"
            android:textColor="#566DB0"
            android:textStyle="bold"
            android:drawableLeft="@drawable/iconfacebook"
            android:drawablePadding="1dp"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textSize="10dp"
            android:text="FIND US ON FACEBOOK" />
            
            </LinearLayout>
   
  
     
   
   
   <LinearLayout
      
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_weight="0.4"
       android:orientation="horizontal"  
       android:background="#CCEBE0">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   
        <TextView
            android:id="@+id/partycontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:lineSpacingExtra="10dp"
            android:padding="5dp"
            android:textColor="#009966"
             android:fontFamily="sans-serif-light"
            android:textSize="15dp" />
     
        </ScrollView>
    </LinearLayout>
    
   
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@android:color/transparent"/>
   

   
     <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_weight="0.1"
       android:orientation="vertical"  
       android:background="#CCEBE0">
        

            
      <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_weight="0.5"
       android:layout_margin="10dp"
       android:orientation="horizontal">
            
                <TextView
                android:id="@+id/contacttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Contact:  " />
                
   
        
            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="..." />
            
            </LinearLayout>
   
      
   </LinearLayout>
   
     
     
</LinearLayout>
</ScrollView>